<div> <%= link_to "New story", new_story_path %>
</div>
<table class="stripy">  
  <% @stories.each do |story|%>    
    <% content_tag_for(:tr, story, :class=>cycle('odd', 'even ')) do %>    
      <td><%= h story.title %></td>
      <td><%= h story.body %></td>
      <td><%= h story.estimate %></td> 
      <td><%= link_to image_tag('edit.png', :alt=>'edit'), edit_story_path(story)%></td>
      <td><%= link_to image_tag('destroy.png', :alt=>'destroy'), story_path(story), :confirm => 'Delete story?', :method => :delete %></td>
    <% end%>
  <% end%>
</table>

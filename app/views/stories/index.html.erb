<div> <%= link_to "New story", new_story_path %>
</div>
<table class="stripy">  
  <% @stories.each do |story|%>    
    <% content_tag_for(:tr, story, :class=>cycle('odd', 'even')) do %>    
      <td><%= h story.title %></td>
      <td><%= h story.body %></td>
      <td><%= h story.estimate %></td>
      <td id='<%=dom_id(story, "status")%>'><span  class='<%=h story.status%>'><%= h story.status %></span></td>
      <td style="width:25px;"><%= link_to_remote image_tag('advance.png', :alt=>'advance'), {:url=>advance_story_path(story), :method => :put} %></td>
      <td><%= link_to image_tag('edit.png', :alt=>'edit'), edit_story_path(story)%></td>
      <td><%= link_to image_tag('destroy.png', :alt=>'destroy'), story_path(story), :confirm => 'Delete story?', :method => :delete %></td>
    <% end%>
  <% end%>
</table>
